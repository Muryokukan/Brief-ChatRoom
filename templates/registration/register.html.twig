{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="flex justify-center items-center mb-3">
        <h1 class="h3 mb-3 font-weight-normal text-2xl pt-3">S'inscrire</h1>
    </div>

    <div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md space-y-6">
    <!-- Affichage des erreurs du formulaire -->
    <div class="text-red-500">
        {{ form_errors(registrationForm) }}
    </div>

    <!-- DÃ©but du formulaire -->
    {{ form_start(registrationForm) }}

    <!-- Champ Email -->
    <div>
        {{ form_row(registrationForm.email, {
            'label': 'Adresse mail',
            'attr': {
                'class': 'w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
            }
        }) }}
    </div>

    <!-- Champ Mot de passe -->
    <div>
        {{ form_row(registrationForm.plainPassword, {
            'label': 'Mot de passe',
            'attr': {
                'class': 'w-full px-4 py-2 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
            }
        }) }}
    </div>

    <!-- Champ Surnom -->
    <div>
        {{ form_row(registrationForm.nickname, {
            'label': 'Pseudo',
            'attr': {
                'class': 'w-full px-4 py-2 mb-6 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
            }
        }) }}
    </div>

    <!-- Bouton de soumission -->
    <div>
        <button type="submit" class="w-full px-6 py-3 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400">
            S'inscrire
        </button>
    </div>

    {{ form_end(registrationForm) }}

</div>
{% endblock %}
